{
  "meta": {
    "version": "1.0.0",
    "scope": "adaptation_governance",
    "authority": "advisor_approval_required",
    "applies_to": [
      "structural_changes",
      "behavioral_adaptation",
      "emotional_adaptation"
    ]
  },
  "adaptation_strategy": {
    "default_strategy": "incremental",
    "strategies": [
      "immediate",
      "incremental",
      "gradual",
      "conservative",
      "experimental"
    ]
  },
  "adaptation_triggers": {
    "performance_threshold": 0.2,
    "error_rate_threshold": 0.15,
    "confidence_drop_threshold": 0.3,
    "adaptation_frequency_min_steps": 100,
    "environmental_change_detection": true
  },
  "structural_adaptation": {
    "enabled": true,
    "allow_neuron_addition": true,
    "allow_neuron_removal": true,
    "allow_connection_changes": true,
    "max_structural_change_rate": 0.05,
    "require_advisor_approval": true
  },
  "behavioral_adaptation": {
    "enabled": true,
    "adjust_learning_rate": true,
    "adjust_exploration_rate": true,
    "adjust_risk_tolerance": true,
    "adaptation_smoothing_factor": 0.9
  },
  "emotional_adaptation": {
    "enabled": true,
    "allow_personality_change": true,
    "emotional_baseline_adjustment": true,
    "emotional_range_expansion": true,
    "max_emotional_shift": 0.3
  },
  "constraints": {
    "prevent_regression": true,
    "maintain_core_values": true,
    "preserve_important_weights": true,
    "max_simultaneous_adaptations": 3
  },
  "validation": {
    "test_adaptation_first": true,
    "rollback_on_failure": true,
    "performance_validation_required": true,
    "min_validation_duration_steps": 500
  },
  "approval_workflow": {
    "require_self_confidence": 0.7,
    "require_advisor_review": true,
    "advisor_approval_threshold": 0.8,
    "allow_experimental_adaptation": false
  },
  "monitoring": {
    "track_all_adaptations": true,
    "log_adaptation_rationale": true,
    "alert_on_major_change": true,
    "adaptation_reversal_enabled": true
  }
}
