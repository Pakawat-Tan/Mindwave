{
  "meta": {
    "version": "1.0.0",
    "scope": "memory_acquisition",
    "authority": "system_with_advisor_review",
    "applies_to": [
      "experience_storage",
      "knowledge_acquisition",
      "memory_encoding"
    ]
  },
  "acquisition_strategy": {
    "default_strategy": "selective",
    "strategies": [
      "immediate",
      "selective",
      "delayed",
      "consolidation_based"
    ]
  },
  "short_term_memory": {
    "max_capacity": 50,
    "decay_rate": 0.95,
    "refresh_on_attention": true,
    "consolidation_threshold": 3
  },
  "middle_term_memory": {
    "max_capacity": 500,
    "retention_duration_minutes": 60,
    "context_importance_weight": 0.7,
    "emotion_strength_multiplier": 1.5
  },
  "long_term_memory": {
    "max_capacity": 10000,
    "min_importance_to_store": 0.3,
    "compression_enabled": true,
    "consolidation_interval_minutes": 30
  },
  "acquisition_triggers": {
    "novelty_threshold": 0.6,
    "emotion_strength_threshold": 0.5,
    "importance_threshold": 0.4,
    "repetition_consolidation": 3
  },
  "filtering": {
    "filter_low_relevance": true,
    "filter_duplicate_content": true,
    "min_relevance_score": 0.3,
    "deduplication_similarity": 0.85
  },
  "encoding": {
    "use_emotional_encoding": true,
    "use_topic_encoding": true,
    "use_episodic_encoding": true,
    "compression_ratio": 0.8
  },
  "review_requirements": {
    "respects_external_learning_flag": true,
    "check_allow_external_learning_from": "SystemRule.capability_flags.allow_external_learning",
    "require_review_for_external_input": true,
    "require_advisor_for_sensitive_data": true,
    "block_external_input_if": "allow_external_learning is false",
    "log_all_acquisitions": true,
    "note": "External data acquisition blocked when allow_external_learning = false"
  }
}
