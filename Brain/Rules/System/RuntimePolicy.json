{
  "meta": {
    "version": "1.0.0",
    "scope": "runtime_execution",
    "authority": "system",
    "applies_to": [
      "brain_controller",
      "processing_cycle",
      "resource_management"
    ]
  },
  "runtime_modes": {
    "default": "normal",
    "available_modes": [
      "normal",
      "fast",
      "efficient",
      "debug"
    ]
  },
  "resource_management": {
    "memory": {
      "max_usage_percent": 80,
      "warning_threshold": 70,
      "emergency_cleanup_trigger": 90
    },
    "cpu": {
      "max_usage_percent": 90,
      "warning_threshold": 75,
      "throttle_trigger": 85
    },
    "cycle_time": {
      "max_milliseconds": 1000,
      "warning_threshold_ms": 800,
      "target_ms": 500
    }
  },
  "timeout_policies": {
    "operation_timeout_ms": 5000,
    "learning_timeout_ms": 30000,
    "inference_timeout_ms": 1000,
    "graceful_shutdown_timeout_ms": 10000
  },
  "performance_tuning": {
    "enable_caching": true,
    "enable_optimization": true,
    "batch_size": 32,
    "parallel_processing": true
  },
  "monitoring": {
    "track_performance": true,
    "log_operations": true,
    "alert_on_anomaly": true,
    "performance_sample_rate": 0.1
  },
  "recovery": {
    "auto_recovery_enabled": true,
    "max_recovery_attempts": 3,
    "recovery_wait_time_ms": 1000
  }
}
