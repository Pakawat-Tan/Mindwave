{
  "meta": {
    "version": "1.0.0",
    "scope": "information_routing",
    "authority": "system",
    "applies_to": [
      "data_flow",
      "module_communication",
      "processing_pipeline"
    ]
  },
  "routing_strategies": {
    "default": "topic_based",
    "available_strategies": [
      "topic_based",
      "priority_based",
      "resource_based",
      "confidence_based"
    ]
  },
  "routing_rules": {
    "vision_data": {
      "route_to": [
        "vision_preprocessor",
        "attention_map",
        "emotion_analyzer"
      ],
      "priority": "high",
      "buffer_size": 100
    },
    "audio_data": {
      "route_to": [
        "sound_preprocessor",
        "topic_router",
        "memory_engine"
      ],
      "priority": "high",
      "buffer_size": 50
    },
    "text_input": {
      "route_to": [
        "input_adapter",
        "topic_router",
        "neural_processing"
      ],
      "priority": "normal",
      "buffer_size": 200
    },
    "learning_signal": {
      "route_to": [
        "learning_engine",
        "gradient_learner",
        "weight_updater"
      ],
      "priority": "critical",
      "buffer_size": 1000
    }
  },
  "topic_routing": {
    "enable_topic_based_routing": true,
    "default_topic_handler": "default_processor",
    "fallback_routing": "general_processor",
    "topic_priorities": {
      "safety": 4,
      "learning": 3,
      "memory": 2,
      "inference": 1
    }
  },
  "routing_optimization": {
    "enable_caching": true,
    "enable_load_balancing": true,
    "max_routing_depth": 5,
    "detect_routing_loops": true
  },
  "monitoring": {
    "track_routing_paths": true,
    "log_routing_decisions": false,
    "alert_on_routing_failure": true
  }
}
